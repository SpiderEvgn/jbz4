    } else {
      $('#'+(rowNum) + "-" + colNum).attr('src',"available.png");
        for (var i = 0; i < ary.length; i++) {
            if (ary[i] == $('#'+(rowNum) + "排" + colNum).id) { ary[i] = ""; }
        }
         for (var i = 0; i < ids.length; i++) {
            if (ids[i] == $('#'+(rowNum) + ":" + colNum).title) { ids[i] = ""; }
