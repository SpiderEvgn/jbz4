    }
   //追加座位号
   function HtmlAppend(div,ids)
   {
     //var row=$("#row").val();
     $('#ary').html("");
     $('#ids').html("");
      for(var i=0;i<div.length;i++)
      {
          $('#ary').append(div[i]+" ");
      }
      for(var i=0;i<ids.length;i++)
